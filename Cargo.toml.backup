[package]
name = "emier-blockchain"
version = "1.0.0"
edition = "2021"

[dependencies]
tokio = { version = "1.0", features = ["full", "macros"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
serde_yaml = "0.9"
clap = { version = "4.0", features = ["derive"] }
chrono = "0.4"
rand = "0.8"
thiserror = "1.0"
async-trait = "0.1"

[[bin]]
name = "emier-node"
path = "src/bin/node/main.rs"

[[bin]]
name = "emier-cli"
path = "src/bin/cli/main.rs"

[[bin]]
name = "emier-dev"
path = "src/bin/dev/main.rs"

[[bin]]
name = "emier-benchmark"
path = "src/bin/benchmark/main.rs"

[package]
edition = "2021"
rust-version = "1.70"

[[bin]]
name = "emier-node"
path = "src/bin/node/main.rs"

[[bin]]
name = "emier-cli" 
path = "src/bin/cli/main.rs"

[[bin]]
name = "emier-dev"
path = "src/bin/dev/main.rs"

[[bin]]
name = "emier-benchmark"
path = "src/bin/benchmark/main.rs"

[features]
default = []
ci = ["serde", "tokio", "clap"]
